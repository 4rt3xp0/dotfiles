# vim ft=conf
set hidden true
set ignorecase true
set icons true

set previewer lf-ueberzug-previewer
set cleaner lf-ueberzug-cleaner

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd open ${{
    test -L "$f" && f=$(readlink -f "$f")
    case $(file --mime-type "$f" -b) in
        application/*) "$f"; read;;
        text/*) "$EDITOR" "$f";;
        *) for f in "$fx"; do xdg-open "$f" > /dev/null 2> /dev/null & done;;
    esac
}}

cmd execute ${{
    "$f"; read
}}

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map d

map au unarchive
map ae execute

# Basic Functions
map . set hidden!
map DD delete
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map C clear

# Movement
map gd cd ~/dox
map gD cd ~/dl
map gp cd ~/pix
map gc cd ~/.config
map gs cd ~/.local/bin
